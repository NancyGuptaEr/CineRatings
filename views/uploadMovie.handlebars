</header>

<main>
    <div class="container">
        <ul class="breadcrumbs">
            <li class="breadcrumbs__crumb">
                <a class="a-link-normal" href="/admin">admin homepage</a>
            </li>
            <li class="breadcrumbs__crumb breadcrumbs__crumb--divider">â€º</li>
            <li class="breadcrumbs__crumb breadcrumbs__crumb--current">
                <span class="a-color-state">Add Movie</span>
            </li>
        </ul>
    </div>
    <div class="container mt-5">
        <h2>Add a New Movie</h2>
        {{#if error}}
        <div id="error" class="alert alert-danger">{{error}}</div>
        {{/if}}
        <div id="error-message" class="alert alert-danger" style="display: none;"></div>
        <form id="addMovieForm" action="/admin/addMovie" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="movieName" class="form-label">Title:</label>
                <input type="text" class="form-control" id="movieName" name="title" required>
            </div>

            <div class="mb-3">
                <label for="director" class="form-label">Director:</label>
                <input type="text" class="form-control" id="director" name="director" required>
            </div>

            <div class="mb-3">
                <label for="actors" class="form-label">Actors:</label>
                <input type="text" class="form-control" id="actors" name="actors" required >
            </div>
            <div class="mb-3">
                <label for="writer" class="form-label">Writer:</label>
                <input type="text" class="form-control" id="writer" name="writer" placeholder="optional">
            </div>
            <div class="mb-3">
                <label for="producer" class="form-label">Producer:</label>
                <input type="text" class="form-control" id="producer" name="producer" required>
            </div>

            <div class="mb-3">
                <label for="releaseDate" class="form-label">ReleaseDate:</label>
                <input type="text" class="form-control" id="releaseDate" name="releaseDate" placeholder="MM/DD/YYYY"
                    required>
            </div>

            <div class="mb-3">
                <label for="contentRating">contentRating:</label><br>
                <select name="contentRating" id="contentRating">
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                    <option value="NC-17">NC-17</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="genre" class="form-label">Genres (press command to select more genres):</label>
                <select class="form-select" name="genre[]" id="genre" multiple>
                    {{#each allGenres}}
                    <option value="{{this}}">{{this}}</option>{{/each}}
                </select>
            </div>

            <div class="mb-3">
                <label for="imageUpload" class="form-label">Upload a thumbnail:</label>
                <input type="file" class="form-control" id="imageUpload" name="image" accept="image/*" required>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Upload Movie</button>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/js/admin_client_side_validation.js"></script>
</main>