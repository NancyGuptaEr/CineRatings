            <label class="form-label" for="roleInput">Select role</label>
            <select class="form-select" name="roleInput" id="roleInput" readonly>
                {{#if user.isAdmin}}
                <option value="admin">Admin</option>
                {{else}}
                <option value="user">User</option>
