<main class="container mt-4">
    <h2>User Profile</h2>
    <div class="mb-3">
        {{#if user.profileImage}}
        <img src="{{user.profileImage}}" class="img-thumbnail img-height" alt="Profile_picture">
        {{else}}
        <img src="../public/images/user.png" class="img-thumbnail img-height" alt="Profile_picture">
        {{/if}}
    </div>
    <form action="/users/profile" method="post" id="userinfo-form" class="mt-3" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="profilePicInput" class="form-label">Profile Picture</label>
            <input type="file" id="profilePicInput" name="profilePicInput" class="form-control" accept="image/*">
        </div>
        <div class="mb-3">
            <label for="emailAddressInput" class="form-label">Email address</label>
            <input type="email" id="emailAddressInput" name="emailAddressInput" class="form-control" placeholder="{{user.emailAddress}}" value="{{user.emailAddress}}" readonly>
            <div class="form-text" id="email-info" hidden>Email field value must be in a proper email address format
            </div>
        </div>
        <div class="mb-3">
            <label for="ageInput" class="form-label">Age</label>
            <input type="number" id="ageInput" name="ageInput" class="form-control" placeholder="{{user.age}}" value="{{user.age}}" readonly>
            <div class="form-text" id="age-info" hidden>Age field value must be a whole number between 18 and 100</div>
        </div>
