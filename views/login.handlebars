<main class="container mt-4">
    <h2>Log in</h2>
    <form action="/login" method="post" id="login-form" class="mt-3">
        <label for="emailAddressInput" class="form-label">Email address</label>
        <input type="email" id="emailAddressInput" name="emailAddressInput" class="form-control"
            value="{{postData.emailAddressInput}}">
        <div class="form-text" id="email-info" hidden>Email field value must be in a proper email address format</div>
        <label for="passwordInput" class="form-label">Password</label>
        <input type="password" id="passwordInput" name="passwordInput" class="form-control"
            value="{{postData.passwordInput}}">
        <div class="form-text" id="password-info" hidden>
            <ul>
                <li>Password must be at least 8 characters long.</li>
                <li>Password must contain at least one uppercase character.</li>
                <li>Password must contain at least one number.</li>
                <li>Password must contain at least one special character.</li>
                <li>Password cannot contain space.</li>
            </ul>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
        <div id="client-side-error-div" hidden></div>
    </form>
    {{#if hasError}}
    <p class="error">{{error}}</p>
    {{/if}}
    <a href="/register">Click here to register!</a>
    <script src="../public/js/login_page.js"></script>
</main>