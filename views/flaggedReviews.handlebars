<header>
    {{!-- <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flagged Reviews</title> --}}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
         <link href="/public/css/styles.css" rel="stylesheet">
</header>
<main>
    <div class="container">
    <ul class="breadcrumbs">
        <li class="breadcrumbs__crumb">
            <a class="a-link-normal" href="/admin">admin homepage</a>
        </li>
        <li class="breadcrumbs__crumb breadcrumbs__crumb--divider"></li>
        <li class="breadcrumbs__crumb breadcrumbs__crumb--current">
            <span class="a-color-state">Flagged Reviews</span>
        </li>
    </ul>
</div>
    <div class="container mt-5" style="max-width: 1000px;">
        <h2 class="mb-4">Flagged Reviews</h2>
        <div class="list-group">
            {{#each allFlaggedReviews}}
            <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                    <div class="fw-bold mb-1">Movie: {{this.title}}</div>
                    <div class="mb-1">Review Content: {{this.review}}</div>
                    <div>Flagged Times:{{this.flaggedTimes}}</div>
                </div>
                <button class="btn btn-danger deleteFlaggedReview-button" data-review-id="{{this.userId}}">Delete</button>
            </div>
            {{/each}}
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/public/js/admin_client_side_validation.js"></script>
</main>