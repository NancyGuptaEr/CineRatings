<header>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

  <link href="/public/css/styles.css" rel="stylesheet">
</header>


<main>
  <h1 class="text-center mt-4 mb-4">Welcome, admin!</h1>
  <div class="d-flex justify-content-center mb-4">
    <div class="d-grid gap-2 d-md-block">
      <a href="/admin/addMovie" class="btn btn-primary w-90">Add Movie</a>
      <a href="/admin/flaggedReviews" class="btn btn-primary w-90">Flagged Reviews</a>
    </div>
  </div>
  <div class="container">
    <div class="row">
      {{#each allMovies}}
      <div class="col-lg-3 mb-4">
        <div class="card h-100">
          <img src="{{this.thumbnailUrl}}" class="card-img-top" alt="{{this.thumbnailUrl}}"
            style="width: auto; height: 260px; object-fit: cover;">
          <div class="card-body text-center">
            <h5 class="card-title">title:{{this.movieName}}</h5>
            <p class="card-text">Director: {{this.director}}</p>
            <p class="card-text">Actors: {{this.actors}}</p>
            <p class="card-text">Genres: {{this.genre}}</p>
            <p class="card-text">ReleaseDate: {{this.releaseDate}}</p>
            <p class="card-text">overallRating:{{this.overall_rating}}</p>
            <p class="card-text">contentRating:{{this.contentRating}}</p>
            <div class="d-flex justify-content-center">
              <a href="/admin/update/{{this._id}}"
                style="margin-right: 10px; color: blue; text-decoration: underline;">Update</a>
              <a href="#" style="color: blue; text-decoration: underline;" class="delete-button"
                data-movieid="{{this._id}}">Delete</a>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="public/js/admin_client_side_validation.js"></script>
</main>